<label for="{{name}}">{{label}}</label>
<input  type="file"
        ng-model="{{name}}"
        name={{name}}
        class="{{rowClass}}"
        placeholder="{{placeholderText}}"
        {{#required}}ng-required="true"{{/required}}
        {{#characterLimit}}ng-maxlength="{{characterLimit}}"{{/characterLimit}}
        title="{{tooltip}}" />
