<div class="row" <%#showWhen%>ng-show="$ctrl.<%showWhen%>()"<%/showWhen%>
                  <%#hideWhen%>ng-hide="$ctrl.<%hideWhen%>()"<%/hideWhen%>>
  <label for="<%name%>"><%label%></label>
  <%#options%>
  <input  type="radio"
          ng-model="$ctrl.model.<%name%>"
          name="<%name%>"
          value="<%.%>"
          class="<%rowClass%>"
          title="<%tooltip%>" />
  <span><%.%></span>
  <%/options%>
</div>
