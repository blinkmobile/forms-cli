<div class="bm-form__field" <%#showWhen%>ng-show="<%moduleName%>.<%showWhen%>()"<%/showWhen%>
                  <%#hideWhen%>ng-hide="<%moduleName%>.<%hideWhen%>()"<%/hideWhen%>>
  <label class="bm-label" for="<%name%>"><%label%></label>
  <%#options%>
  <label class="bm-label <%rowClass%>" title="<%tooltip%>">
    <input  type="radio"
            ng-model="<%moduleName%>.model.<%name%>"
            name="<%moduleName%>_{{<%moduleName%>.subFormIndex + '_' || '_'}}<%name%>"
            value="<%.%>"
            class="bm-input bm-input__radio <%rowClass%>"
            title="<%tooltip%>" />
    <span class="bm-label__body"><%.%></span>
  </label>
  <%/options%>
  <%#hint%><span class="bm-hint bm-hint__radio"><%hint%></span><%/hint%>
</div>
