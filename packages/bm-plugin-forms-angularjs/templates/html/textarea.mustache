<div class="bm-form__field" <%#showWhen%>ng-show="<%moduleName%>.<%showWhen%>()"<%/showWhen%>
                  <%#hideWhen%>ng-hide="<%moduleName%>.<%hideWhen%>()"<%/hideWhen%>>
  <label class="bm-label" for="<%name%>"><%label%></label>
  <textarea class="bm-input bm-input__textarea <%rowClass%>"
            ng-model="<%moduleName%>.model.<%name%>"
            name="<%name%>"
            placeholder="<%placeholderText%>"
            <%#required%>ng-required="true"<%/required%>
            <%#characterLimit%>maxlength="<%characterLimit%>"<%/characterLimit%>
            title="<%tooltip%>">{{<%moduleName%>.model.<%name%>}}</textarea>
  <%#hint%><span class="bm-hint bm-hint__textarea"><%hint%></span><%/hint%>
</div>
