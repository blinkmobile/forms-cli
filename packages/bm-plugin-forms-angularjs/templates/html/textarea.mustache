<div class="bm-form__field" <%#showWhen%>ng-show="$ctrl.<%showWhen%>()"<%/showWhen%>
                  <%#hideWhen%>ng-hide="$ctrl.<%hideWhen%>()"<%/hideWhen%>>
  <label class="bm-label" for="<%name%>"><%label%></label>
  <textarea class="bm-input bm-input__textarea <%rowClass%>"
            ng-model="$ctrl.model.<%name%>"
            name="<%name%>"
            placeholder="<%placeholderText%>"
            <%#required%>ng-required="true"<%/required%>
            <%#characterLimit%>ng-maxlength="<%characterLimit%>"<%/characterLimit%>
            title="<%tooltip%>"></textarea>
  <%#hint%><span class="bm-hint bm-hint__textarea"><%hint%></span><%/hint%>
</div>
