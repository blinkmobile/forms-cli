<div class="bm-form__field"  <%#showWhen%>ng-show="<%moduleName%>.<%showWhen%>()"<%/showWhen%>
                  <%#hideWhen%>ng-hide="<%moduleName%>.<%hideWhen%>()"<%/hideWhen%>>
  <label class="bm-label" for="<%name%>"><%label%></label>
  <input  type="checkbox"
          ng-model="<%moduleName%>.model.<%name%>"
          local-forage="{key: '<%name%>', name: '<%moduleName%>', scopeKey: '<%moduleName%>.model.<%name%>'}"
          name="<%name%>"
          class="bm-input bm-input__checkbox <%rowClass%>"
          title="<%tooltip%>" />
  <%#hint%><span class="bm-hint bm-hint__checkbox"><%hint%></span><%/hint%>
</div>
