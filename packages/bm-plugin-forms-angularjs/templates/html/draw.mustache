<div class="bm-form__field" <%#showWhen%>ng-show="<%moduleName%>.<%showWhen%>()"<%/showWhen%>
                  <%#hideWhen%>ng-hide="<%moduleName%>.<%hideWhen%>()"<%/hideWhen%>>
  <label class="bm-label" for="<%name%>"><%label%></label>
  <bm-signature-pad style="display: block; width: 100%; height: 76px; border: solid 1px #D1D1D1; box-sizing: border-box; margin-bottom: 1.5rem"
                    ng-model="<%moduleName%>.model.<%name%>"
                    local-forage="{key: '<%name%>', name: '<%moduleName%>', scopeKey: '<%moduleName%>.model.<%name%>', defaultValue: <%moduleName%>.model.<%name%>}"
                    ng-disabled="<%moduleName%>.<%name%>Disabled"
                    name="<%name%>"
                    class="bm-input bm-input__signature-pad <%rowClass%>"
                    <%#required%>ng-required="true"<%/required%>
                    title="<%tooltip%>"
                    crop="true"
                    image-type="'image/png'"
                    resize="<%moduleName%>.resizeSignaturePad<%name%> = $fn"></bm-signature-pad>
  <div class="bm-button-container bm-signaturepad__button-container">
    <button class="bm-button" ng-click="<%moduleName%>.clearSignaturePad('<%name%>');">Clear</button>
    <button class="bm-button" ng-hide="<%moduleName%>.<%name%>Disabled"
            ng-click="<%moduleName%>.<%name%>Disabled = true">Done</button>
  </div>
  <%#hint%><span class="bm-hint bm-hint__signature-pad"><%hint%></span><%/hint%>
</div>
