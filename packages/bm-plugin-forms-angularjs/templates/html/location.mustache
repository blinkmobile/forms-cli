<div class="bm-form__field"  <%#showWhen%>ng-show="<%moduleName%>.<%showWhen%>()"<%/showWhen%>
                  <%#hideWhen%>ng-hide="<%moduleName%>.<%hideWhen%>()"<%/hideWhen%>>
  <label class="bm-label" for="<%name%>"><%label%></label>
  <bm-confirm-location-on-map
      ng-model="<%moduleName%>.model.<%name%>"
      local-forage="{key: '<%name%>', name: '<%moduleName%>', scopeKey: '<%moduleName%>.model.<%name%>', defaultValue: <%moduleName%>.model.<%name%>}"
      class="bm-input__location"
    ></bm-confirm-location-on-map>
  <%#hint%><span class="bm-hint bm-hint__location"><%hint%></span><%/hint%>
</div>
