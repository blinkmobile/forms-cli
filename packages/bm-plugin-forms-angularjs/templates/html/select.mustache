<div class="bm-form__field" <%#showWhen%>ng-show="<%moduleName%>.<%showWhen%>()"<%/showWhen%>
                  <%#hideWhen%>ng-hide="<%moduleName%>.<%hideWhen%>()"<%/hideWhen%>>
  <label class="bm-label" for="<%name%>"><%label%></label>
  <select name="<%name%>"
          ng-model="<%moduleName%>.model.<%name%>"
          class="bm-input bm-input__select <%rowClass%>"
          title="<%tooltip%>"
          <%#multi%>multiple="multiple"<%/multi%>>
    <%#options%>
      <option value="<%id%>"><%value%></option>
    <%/options%>
  </select>
  <%#hint%><span class="bm-hint bm-hint__select"><%hint%></span><%/hint%>
</div>
