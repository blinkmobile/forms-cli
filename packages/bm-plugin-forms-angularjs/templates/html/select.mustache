<div class="bm-form__field" <%#showWhen%>ng-show="$ctrl.<%showWhen%>()"<%/showWhen%>
                  <%#hideWhen%>ng-hide="$ctrl.<%hideWhen%>()"<%/hideWhen%>>
  <label class="bm-label" for="<%name%>"><%label%></label>
  <select name="<%name%>"
          ng-model="$ctrl.model.<%name%>"
          class="bm-input bm-input__select <%rowClass%>"
          title="<%tooltip%>"
          <%#multi%>multiple="multiple"<%/multi%>>
    <%#options%>
      <option value="<%.%>"><%.%></option>
    <%/options%>
  </select>
  <%#hint%><span class="bm-hint bm-hint__select"><%hint%></span><%/hint%>
</div>
