<ng-form name="<%moduleName%>Form" class="bm-form"
         ng-model-options="{ debounce: 500, allowInvalid:true }"
         <%#showWhen%>ng-show="<%moduleName%>.<%showWhen%>()"<%/showWhen%>
         <%#hideWhen%>ng-hide="<%moduleName%>.<%hideWhen%>()"<%/hideWhen%>>
  <%&header%>
  <%&elements%>
  <%&footer%>

  <ng-transclude ng-transclude-slot="pagination"></ng-transclude>
  <button ng-hide="<%moduleName%>.isSubForm"
          ng-disabled="<%moduleName%>Form.$invalid || <%moduleName%>Form.$pristine">Submit</button>

  <button ng-hide="<%moduleName%>.isSubForm"
          ng-disabled="<%moduleName%>Form.$pristine">Clear Form</button>

  <button ng-hide="<%moduleName%>.isSubForm"
          ng-disabled="<%moduleName%>Form.$pristine">Save Draft</button>

</ng-form>
