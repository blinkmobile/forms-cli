<div class="bm-form__pagination" ng-show="<%moduleName%>.pageNumbers">
  <button class="bm-button bm-button__pagination-previous"
          ng-click="<%moduleName%>.changePageBy(-1)"
          ng-disabled="<%moduleName%>.page <= 0">Previous</button>
  <span class="bm-form__pagination-page-number">Page {{<%moduleName%>.page + 1}} of {{<%moduleName%>.pageNumbers.length}}</span>
  <button class="bm-button bm-button__pagination-next"
          ng-click="<%moduleName%>.changePageBy(1)"
          ng-disabled="<%moduleName%>.page >= <%moduleName%>.pageNumbers.length - 1">Next</button>
</div>
