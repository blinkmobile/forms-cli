<div class="bm-form__field" <%#showWhen%>ng-show="<%moduleName%>.<%showWhen%>()"<%/showWhen%>
                  <%#hideWhen%>ng-hide="<%moduleName%>.<%hideWhen%>()"<%/hideWhen%>>
  <label class="bm-label bm-label_checkboxes" for="<%name%>"><%label%></label>
  <%#options%>
  <label class="bm-label <%rowClass%>" title="<%tooltip%>">
    <input  type="checkbox"
            ng-checked="<%moduleName%>.model.<%name%>.indexOf('<%id%>') > -1"
            ng-click="<%moduleName%>.model.<%name%>.indexOf('<%id%>') > -1 ? <%moduleName%>.model.<%name%>.splice(<%moduleName%>.model.<%name%>.indexOf('<%id%>'), 1) : <%moduleName%>.model.<%name%>.push('<%id%>')"
            name="<%name%>"
            class="bm-input bm-input__checkbox" />
    <span class="bm-label__body"><%value%></span>
  </label>
  <%/options%>
  <%#hint%><span class="bm-hint bm-hint__checkbox"><%hint%></span><%/hint%>
</div>
